{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "baseUrl": ".",
    "paths": {
      "@coeus-agent/*": [
        "packages/*/src"
      ]
    },
    "resolveJsonModule": true,
    "allowJs": false,
    "declaration": true,
    "emitDeclarationOnly": true,
    "outDir": "dist",
    "isolatedModules": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": [
    "src",
    "test"
  ]
}